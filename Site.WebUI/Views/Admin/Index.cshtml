@model IEnumerable<Site.Domain.Entities.Vinyl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>View Products</h1>
<table class="table table-striped table-condensed table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Style</th>
        <th class="NumbericCol">Price</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var item in Model)
    {             

        <tr>
            <td>@item.VinylId</td>
            <td>@Html.ActionLink(item.Artist + " - " + item.Title, "Edit", new { item.VinylId })</td>
            <td>@item.Style</td>
            <td class="NumbericCol">@item.Price.ToString("# руб")</td>
            <td class="text-center">
                @using (Html.BeginForm("Delete", "Admin"))
                {
                    @Html.Hidden("VinylId", item.VinylId)
                    <input class="btn btn-large btn-primary" type="submit" value="Delete" />

                }
            </td>
        </tr>
    }
</table>


<div class="panel-footer">
        @Html.ActionLink("Add a new product", "Create", null,
            new { @class = "btn btn-default" })
    </div>
