                    <!---это баннерное поле левое. в админке дать возможность сюда код добавлять вместо этого-->
                </div>
            </div>
            <div class="col-md-8 col-lg-9 col-sm-12">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="features-tab">
                            <!-- Nav tabs -->
                            <div class="shop-all-tab">
                                <div class="two-part">
                                    <ul class="nav tabs" role="tablist">
                                        <li class="vali">Отображать:</li>
                                        <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab"><i class="fa fa-th-large"></i></a></li>
                                        <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab"><i class="fa fa-align-justify"></i></a></li>
                                    </ul>
                                </div>
                                <div class="re-shop">
                                    <div class="sort-by">
                                        <div class="shop6">
                                            <label>Сортировать по :</label>
                                            <select>
                                                <option value="">без сортировки</option>
                                                <option value="">исполнителю</option>
                                                <option value="">стране производства A-Z</option>
                                                <option value="">цене: по возрастанию</option>
                                                <option value="">цене: по убыванию</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="shop5">
                                        <label>Показывать по :</label>
                                        <select onchange="">
                                            <option value="12">12</option>
                                            <option value="24">24</option>
                                            <option value="36">36</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div role="tabpanel" class="tab-pane active" id="home">
                                    <div class="row">
                                        <div class="shop-tab">
                                            @foreach (var p in Model.products)
                                            {
                                                @Html.Partial("VinylSummary", p)
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="shop-all-tab-cr shop-bottom">
                                <div class="two-part">
                                    <div class="shop5 page">
                                        @*<ul>
                                            <li>
                                                <a class="active" href="#">1</a>
                                                <a href="#">2</a>
                                                <a href="#">3</a>
                                                <a href="#">4</a>
                                                <a href="#">5</a>
                                                <a href="#"><i class="fa fa-arrow-right"></i></a>
                                            </li>
                                        </ul>*@
                                        @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x, style = Model.CurrentStyle, pageSize = Model.PagingInfo.ItemsPerPage }))
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
